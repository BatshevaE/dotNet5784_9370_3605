<Window x:Class="PL.DatePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
   	    DataContext="{Binding Clock, RelativeSource={RelativeSource Self}, Mode=TwoWay}"
        Title="DatePickerWindow" Height="450" Width="800">
    <Grid>
        <DatePicker DisplayDateStart="{Binding Date,Mode=OneWay}" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top" SelectedDateChanged="DatePicker_Select"/>

    </Grid>
</Window>
