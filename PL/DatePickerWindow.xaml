<Window x:Class="PL.DatePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
   	    DataContext="{Binding Clock, RelativeSource={RelativeSource Self}, Mode=TwoWay}"
        Title="DatePickerWindow" Height="200" Width="200">
    <Grid >
        <Calendar DisplayDateStart="{Binding Date,Mode=OneWay}" SelectedDatesChanged="Date_Select" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="White" Height="213" Width="180" Margin="0,10,0,0" Foreground="Aqua"/>
        <!--<Grid.Background>
            <ImageBrush ImageSource="https://static.vecteezy.com/system/resources/previews/008/608/207/non_2x/motion-graphic-flat-style-illustration-design-free-vector.jpg" Stretch="Uniform"/>
        </Grid.Background>-->
    </Grid>
</Window>
